  {
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["./src/shared/*"]
      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
